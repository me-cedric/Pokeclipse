model User {
  id        String   @id @default(uuid())
  discordId String   @unique
  name      String
  avatar    String
}

enum GameState {
  IDLE
  QUESTIONS_1
  QUESTIONS_2
  BLIND_TEST_1
  BLIND_TEST_2
  WHOS_THAT_1
  WHOS_THAT_2
  GEOGUESSR
  FINAL
  COMPLETED
}

model Game {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now())
  isActive  Boolean  @default(false)
  currentState GameState @default(IDLE)
}

enum UserType {
  PLAYER
  ADMIN
}

model GameMember {
  id        String   @id @default(uuid())
  gameId    String
  userId    String
  userType  UserType
}
